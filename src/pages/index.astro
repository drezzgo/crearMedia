---
import Layout from '../layouts/Layout.astro';
import homeData from '../data/home.json';
---

<Layout title={homeData.meta.title} description={homeData.meta.description}>
  <section class="bg-gradient-to-r from-blue-600 to-purple-600 text-white py-24">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-5xl font-bold mb-4">{homeData.hero.title}</h1>
      <p class="text-xl mb-8">{homeData.hero.subtitle}</p>
      <a 
        href={homeData.hero.cta.link} 
        class="inline-block bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors"
      >
        {homeData.hero.cta.text}
      </a>
    </div>
  </section>

  <section class="py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-4">{homeData.about.title}</h2>
      <p class="text-lg text-center max-w-3xl mx-auto text-gray-700">
        {homeData.about.description}
      </p>
    </div>
  </section>

  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">{homeData.services.title}</h2>
      <div class="grid md:grid-cols-3 gap-8">
        {homeData.services.items.map((service) => (
          <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow">
            <h3 class="text-xl font-semibold mb-3">{service.title}</h3>
            <p class="text-gray-600">{service.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>
