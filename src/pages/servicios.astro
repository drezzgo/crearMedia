---
import Layout from '../layouts/Layout.astro';
import serviciosData from '../data/servicios.json';
---

<Layout title={serviciosData.meta.title} description={serviciosData.meta.description}>
  <section class="bg-blue-600 text-white py-16">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl font-bold mb-4">{serviciosData.hero.title}</h1>
      <p class="text-xl">{serviciosData.hero.subtitle}</p>
    </div>
  </section>

  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="space-y-12">
        {serviciosData.services.map((service) => (
          <div class="bg-white p-8 rounded-lg shadow-md">
            <h2 class="text-2xl font-bold mb-4">{service.title}</h2>
            <p class="text-gray-700 mb-4">{service.description}</p>
            <ul class="grid md:grid-cols-2 gap-3">
              {service.features.map((feature) => (
                <li class="flex items-center text-gray-600">
                  <span class="mr-2 text-blue-600">âœ“</span>
                  {feature}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>
