---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const blogs = await getCollection('blogs');
  return blogs.map((blog) => ({
    params: { slug: blog.slug },
    props: { blog },
  }));
}

const { blog } = Astro.props;
const { Content } = await blog.render();
---

<Layout title={blog.data.title} description={blog.data.description}>
  <article class="py-16">
    <div class="container mx-auto px-4 max-w-4xl">
      <header class="mb-8">
        <h1 class="text-4xl font-bold mb-4">{blog.data.title}</h1>
        <div class="flex items-center gap-4 text-gray-600 mb-4">
          <span>{blog.data.author}</span>
          <span>â€¢</span>
          <time datetime={blog.data.pubDate.toISOString()}>
            {blog.data.pubDate.toLocaleDateString('es-MX', { year: 'numeric', month: 'long', day: 'numeric' })}
          </time>
        </div>
        {blog.data.tags && (
          <div class="flex flex-wrap gap-2">
            {blog.data.tags.map((tag) => (
              <span class="bg-blue-100 text-blue-800 text-sm px-3 py-1 rounded">{tag}</span>
            ))}
          </div>
        )}
      </header>
      
      <div class="prose prose-lg max-w-none">
        <Content />
      </div>
    </div>
  </article>
</Layout>
