---
import Layout from '../layouts/Layout.astro';
import acercaData from '../data/acerca.json';
---

<Layout title={acercaData.meta.title} description={acercaData.meta.description}>
  <section class="bg-purple-600 text-white py-16">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl font-bold mb-4">{acercaData.hero.title}</h1>
      <p class="text-xl">{acercaData.hero.subtitle}</p>
    </div>
  </section>

  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-8 mb-12">
        <div class="bg-white p-8 rounded-lg shadow-md">
          <h2 class="text-2xl font-bold mb-4">{acercaData.about.mission.title}</h2>
          <p class="text-gray-700">{acercaData.about.mission.description}</p>
        </div>
        <div class="bg-white p-8 rounded-lg shadow-md">
          <h2 class="text-2xl font-bold mb-4">{acercaData.about.vision.title}</h2>
          <p class="text-gray-700">{acercaData.about.vision.description}</p>
        </div>
      </div>

      <div class="bg-white p-8 rounded-lg shadow-md">
        <h2 class="text-2xl font-bold mb-6">{acercaData.about.values.title}</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          {acercaData.about.values.items.map((value) => (
            <div class="text-center">
              <h3 class="text-xl font-semibold mb-2">{value.name}</h3>
              <p class="text-gray-600">{value.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
</Layout>
