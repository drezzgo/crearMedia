---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const eventos = await getCollection('eventos');
const sortedEventos = eventos.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<Layout title="Eventos - CrearMedia México" description="Descubre nuestros próximos eventos, workshops y meetups">
  <section class="bg-orange-600 text-white py-16">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl font-bold mb-4">Eventos</h1>
      <p class="text-xl">Únete a nuestra comunidad digital</p>
    </div>
  </section>

  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-8">
        {sortedEventos.map((evento) => (
          <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow">
            <div class="p-6">
              <span class="inline-block bg-orange-100 text-orange-800 text-sm px-3 py-1 rounded mb-3">
                {evento.data.type}
              </span>
              <h2 class="text-2xl font-bold mb-2">
                <a href={`/eventos/${evento.slug}`} class="hover:text-orange-600">
                  {evento.data.title}
                </a>
              </h2>
              <p class="text-gray-700 mb-4">{evento.data.description}</p>
              <div class="space-y-2 text-gray-600">
                <p class="flex items-center">
                  <span class="mr-2">📅</span>
                  {evento.data.date.toLocaleDateString('es-MX', { year: 'numeric', month: 'long', day: 'numeric' })}
                </p>
                <p class="flex items-center">
                  <span class="mr-2">⏰</span>
                  {evento.data.time}
                </p>
                <p class="flex items-center">
                  <span class="mr-2">📍</span>
                  {evento.data.location}
                </p>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>
</Layout>
