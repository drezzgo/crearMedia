---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const blogs = await getCollection('blogs');
const sortedBlogs = blogs.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Layout title="Blog - CrearMedia México" description="Lee nuestros últimos artículos sobre desarrollo web, diseño y marketing digital">
  <section class="bg-green-600 text-white py-16">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl font-bold mb-4">Blog</h1>
      <p class="text-xl">Conocimiento y tendencias del mundo digital</p>
    </div>
  </section>

  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {sortedBlogs.map((blog) => (
          <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow">
            <div class="p-6">
              <h2 class="text-xl font-bold mb-2">
                <a href={`/blogs/${blog.slug}`} class="hover:text-blue-600">
                  {blog.data.title}
                </a>
              </h2>
              <p class="text-gray-600 text-sm mb-3">
                {blog.data.pubDate.toLocaleDateString('es-MX', { year: 'numeric', month: 'long', day: 'numeric' })}
              </p>
              <p class="text-gray-700 mb-4">{blog.data.description}</p>
              {blog.data.tags && (
                <div class="flex flex-wrap gap-2">
                  {blog.data.tags.map((tag) => (
                    <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded">{tag}</span>
                  ))}
                </div>
              )}
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>
</Layout>
